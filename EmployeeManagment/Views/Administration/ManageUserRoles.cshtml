@model List<UserRolesViewModel>


@{
    var userId = ViewBag.userId;

    ViewBag.Title = "Manage User Roles";
}

<h1>Manage User Roles</h1>

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
        </div>

        <div class="card-body">

        @for(int i = 0; i < Model.Count; i++)
        {
         <div class="form-check m-1">
             <input type="hidden" asp-for="@Model[i].RolesId" />
             <input type="hidden" asp-for="@Model[i].RolesName" />
             <input asp-for="@Model[i].IsSelected" class="form-check-input" />
             <label class="col-form-label" asp-for="@Model[i].IsSelected">
                 @Model[i].RolesName
             </label>
         </div>
        }

        </div>

        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"/>
            <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>